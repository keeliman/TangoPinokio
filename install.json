{
  "run": [{
    "method": "shell.run",
    "params": {
      "venv": true,
      "message": [
        "git clone https://github.com/CyberAgentAILab/TANGO.git .",
        "python -m venv venv"
      ]
    }
  }, {
    "method": "shell.run",
    "params": {
      "venv": true,
      "platform": {
        "windows": {
          "message": ".\\venv\\Scripts\\activate && pip install -r requirements.txt"
        },
        "linux": {
          "message": "source venv/bin/activate && pip install -r requirements.txt"
        },
        "darwin": {
          "message": "source venv/bin/activate && pip install -r requirements.txt"
        }
      }
    }
  }, {
    "method": "notify",
    "params": {
      "html": "TANGO installation completed! Please configure your OpenAI API key in config.py before running."
    }
  }]
