{
  "requires": [
    { "type": "conda", "name": "python=3.9.20" },
    { "type": "conda", "name": "ffmpeg", "args": "-c conda-forge" },
    { "type": "pip", "name": "torch", "args": "==1.10.0+cu113 -f https://download.pytorch.org/whl/cu113/torch_stable.html" },
    { "type": "pip", "name": "torchvision", "args": "==0.11.1+cu113 -f https://download.pytorch.org/whl/cu113/torch_stable.html" }
  ],
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/CyberAgentAILab/TANGO.git && cd TANGO"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/justinjohn0306/Wav2Lip.git"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/dajes/frame-interpolation-pytorch.git"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "pip install -r pre-requirements.txt"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "pip install -r requirements.txt"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "python app.py"
      }
    },
    {
      "method": "input",
      "params": {
        "title": "Installation r√©ussie",
        "description": "Retournez au tableau de bord et lancez l'application !"
      }
    },
    {
      "method": "browser.open",
      "params": {
        "uri": "/?selected=TANGO"
      }
    }
  ]
}
